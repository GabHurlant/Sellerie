{% extends 'base.html.twig' %}

{% block title %}Registration{% endblock %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="w-full max-w-md bg-white p-8 rounded-lg shadow-lg">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="bg-red-100 text-red-700 border border-red-400 rounded p-4 mb-4">
                    {{ flash_error }}
                </div>
            {% endfor %}

            <h1 class="text-2xl font-bold text-center text-gray-700 mb-6">Registration</h1>

            {{ form_start(registrationForm, {attr: {class: 'space-y-4'}}) }}

                {{ form_row(registrationForm.email, {
                    attr: {
                        class: 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500'
                    }
                }) }}

                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password',
                    attr: {
                        class: 'w-full px-4 py-2 border border-gray-300 rounded focus:outline-none focus:border-blue-500'
                    }
                }) }}

                {{ form_row(registrationForm.agreeTerms, {
                    attr: {
                        class: 'mr-2'
                    },
                    label_attr: {
                        class: 'text-gray-600'
                    }
                }) }}

                <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded hover:bg-blue-600 transition duration-200">
                    Sign Up
                </button>
                
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
